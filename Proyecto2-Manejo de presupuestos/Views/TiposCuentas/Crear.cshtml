@model TipoCuenta
@{
    ViewData["Title"] = "Crear Tipo Cuenta";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="display-4 text-center">Crear Tipo de Cuenta</h1>
            <p class="lead text-center">El tipo de cuenta se refiere a cómo podemos agrupar cuentas. Ejemplos: Préstamos, tarjetas de crédito, etc.</p>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <form asp-controller="TiposCuentas" asp-action="Crear">
                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label">Nombre</label>
                    <input type="text" asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Enviar</button>
                    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

 @section Scripts {
    <partial name="_ValidationScriptsPartial" />
 }